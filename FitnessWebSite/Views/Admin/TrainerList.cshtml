@using FitnessWebSite.Models.Classes
@model List<Trainer>

@{
    ViewBag.Title = "TrainerList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="contact-wrap w-100 p-md-5 p-4">
    <h3 class="mb-4">Trainers</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Trainer Name</th>
                <th>Trainer Major</th>
                <th>Trainer Description</th>
                <th>Trainer Profile Photo</th>
                <th>Trainer Experience</th>
                <th>Trainer's Active Member</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.id</td>
                    <td>@x.trainerName</td>
                    <td>@x.trainerMajor</td>
                    <td>@x.trainerDescription</td>
                    <td>@x.trainerProfilePhoto</td>
                    <td>@x.trainerExperience</td>
                    <td>@x.trainerActiveMember</td>
                    <td><a href="/Admin/GetTrainer/@x.id" class="btn btn-primary">Update</a></td>
                    <td><a href="/Admin/NewTrainer/" class="btn btn-danger">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Add New Program butonu -->
    <div class="form-group mt-4">
        <a href="/Admin/NewTrainer/">
            <button class="btn btn-primary">Add New Trainer</button>
        </a>
        
    </div>
</div>




